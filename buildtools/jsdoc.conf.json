{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [
            "public/app/",
            "components/",
            "README.md"
        ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },

    "plugins": ["plugins/escapeHtml"],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "encoding": "utf8",
        "destination": "./doc/js/",
        "private": true,
        "lenient": true,
        "recurse": true
    }
}
